<%- include('../partials/header') %>

<form id="new-form" action="/keyboards" method="POST">
  <label>Name:</label>
  <input type="text" name="name">
  <label>Keyboard Size:</label>
  <select name="keyboardSize">
    <option value="60%">60%</option>
    <option value="65%">65%</option>
    <option value="75%">75%</option>
    <option value="TKL">TKL</option>
    <option value="Full">Full</option>
  </select>
  <label>PCB Type:</label>
  <select name="pcbType">
    <option value="Hot Swap">Hot Swap</option>
    <option value="Solderable">Solderable</option>
  </select>
  <label>Oil Type:</label>
  <select name="oilType">
    <option value="Krytox 205g0">Krytox 205g0</option>
    <option value="Krytox 105g0">Krytox 105g0</option>
  </select>
  <label>Plate Material:</label>
  <select name="plateMaterial">
    <option value="Brass">Brass</option>
    <option value="Aluminum">Aluminum</option>
    <option value="Pom">Pom</option>
  </select>
  <input type="submit" value="Add Keyboard" action="/keyboards" method="POST">
</form>

<%- include('../partials/footer') %>