<%- include ('../partials/tempBar.ejs') %>

<div class="row">
  <div class="col s6">
    <img class="pic" src="https://images.unsplash.com/photo-1595044426077-d36d9236d54a?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80" alt="keyboard">
  </div>
  <div class="col s6">

<form id="new-form" action="/keyboards" method="POST">
  <label>Name:</label>
  <input type="text" name="name">
  
  <label>Keyboard Size:</label>
  <select class="browser-default hover " name="size">
      <option value="" disabled selected>Choose your option</option>
      <option value="60%">60%</option>
      <option value="65%">65%</option>
      <option value="75%">75%</option>
      <option value="TKL">TKL</option>
      <option value="Full">Full</option>
  </select>

  <label>PCB Type:</label>
  <select class="browser-default hover" name="pcbType">
    <option value="" disabled selected>Choose your option</option>
    <option value="Hot Swap">Hot Swap</option>
    <option value="Solderable">Solderable</option>
  </select>

  <label>Switch Type:</label>
  <select class="browser-default hover" name="switchType">
    <option value="" disabled selected>Choose your option</option>
    <option value="Clicky">Clicky</option>
    <option value="Tactile">Tactile</option>
    <option value="Linear">Linear</option>
  </select>

  <label>Oil Type:</label>
  <select class="browser-default hover" name="oilType">
    <option value="" disabled selected>Choose your option</option>
    <option value="Krytox 205g0">Krytox 205g0</option>
    <option value="Krytox 105g0">Krytox 105g0</option>
  </select>

  <label>Plate Material:</label>
  <select class="browser-default hover" name="plateMaterial">
    <option value="" disabled selected>Choose your option</option>
    <option value="Brass">Brass</option>
    <option value="Aluminum">Aluminum</option>
    <option value="Pom">Pom</option>
  </select> 
  
  <div class="hover">
  <a class="waves-effect waves-light btn black-text blue-grey lighten-3">
    <input type="submit" value="Add Keyboard"></a>
  </div>
</form>
  </div>


</div>
</body>
</html>