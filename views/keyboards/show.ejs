<%- include('../partials/header') %>

<section id="show-page">
  <div>Name: </div>
  <div><%= keyboard.name %></div>
  <div>Size: </div>
  <div><%= keyboard.size %></div>
  <div>Plate Material: </div>
  <div><%= keyboard.plateMaterial %></div>
  <div>Switch Type: </div>
  <div><%= keyboard.switchType %></div>
  <div>PCB Type: </div>
  <div><%= keyboard.pcbType %></div>
  <div>Oil Type: </div>
  <div><%= keyboard.oilType %></div>
</section>
<h2>Notes</h2>
<form id="add-review-form" method="POST"
  action="/keyboards/<%= keyboard._id %>">
  <label>Notes:</label>
  <textarea name="content"></textarea>
  <label>Rating:</label>
  <input type="submit" value="Add Notes">
</form>
<% if (keyboard.length) { %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Review</th>
        <th>Rating</th>
        <th>Review ID</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% keyboards.reviews.forEach(function(k) { %>
      <tr>
        <td><%= k.createdAt.toLocaleDateString() %></td>
        <td><%= k.name %></td>
        <td><%= k.rating %></td>
        <td><%= k.id %></td>
        <td><form action='/reviews/<%= r._id %>?_method=DELETE' method="POST">
          <input type="submit" value="Delete" />
        </form></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  <% } else { %>
  <h5>No Reviews Yet</h5>
  <% } %>
<%- include('../partials/footer') %>