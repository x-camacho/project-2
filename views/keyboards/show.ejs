<%- include('../partials/header') %>

<section id="show-page">
  <div><h2>Keyboard Details</h2></div>
  <div><h3>Name:</h3></div>
  <div><%= keyboard.name %></div>
  <div><h3>Size:</h3></div>
  <div><%= keyboard.size %></div>
  <div><h3>PCB Type:</h3></div>
  <div><%= keyboard.pcbType %></div>
  <div><h3>Switch Type:</h3></div>
  <div><%= keyboard.switchType %></div>
  <div><h3>Oil Type:</h3></div>
  <div><%= keyboard.oilType %></div>
  <div><h3>Plate Material Type:</h3></div>
  <div><%= keyboard.plateMaterial %></div>
</section>
<h2>Additional Keyboard Build Notes</h2>
<form id="add-review-form" method="POST"
  action="/keyboards/<%= keyboard._id %>">
  <label>Additional Build Notes:</label>
  <textarea name="content"></textarea>
  <input type="submit" value="Add Notes">
</form>
<% if (keyboard.length) { %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Review</th>
        <th>Rating</th>
        <th>Review ID</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% keyboards.reviews.forEach(function(k) { %>
      <tr>
        <td><%= k.createdAt.toLocaleDateString() %></td>
        <td><%= k.Name %></td>
        <td><%= k.rating %></td>
        <td><%= k.id %></td>
        <td><form action='/reviews/<%= r._id %>?_method=DELETE' method="POST">
          <input type="submit" value="Delete" />
        </form></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  <% } else { %>
  <h5>No Additional Build Notes Recorded</h5>
  <% } %>


<%- include('../partials/footer') %>